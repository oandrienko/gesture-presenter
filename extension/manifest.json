{
  "manifest_version": 2,

  "name": "Gesture Presenter",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icons/icon19.png",
    "default_title": "Gesture Presenter",
    "default_popup": "src/page_action/popup.html"
  },
  "default_locale": "en",
  "background": {
    "scripts": ["js/jquery/jquery.js", "src/bg/background.js"]
  },

  "content_scripts": [
    {
      "matches": ["*://*.google.com/*"],
      "js": ["js/jquery/jquery.js"]
    }
  ],

  "permissions": [
    "<all_urls>",
    "webRequest",
    "webRequestBlocking",
    "activeTab",
    "tabs",
    "background"
  ]
}